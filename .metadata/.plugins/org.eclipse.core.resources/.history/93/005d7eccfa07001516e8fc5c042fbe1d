import javax.swing.JOptionPane;


public class GuessTheAnimal
{
	public static void main(String[] args)
	{
		// Copyright Wintriss Technical Schools 2013
		// 1. ask user if it has 4 legs. if yes, it’s a pig if no, it’s a monkey 
		// 2. add zebra, pig, monkey, bird,
		// 3. add fish and spider.
		
		int legs = JOptionPane.showConfirmDialog(null, "Do you have four legs?", "",
				JOptionPane.YES_NO_OPTION);
	
			if(legs == JOptionPane.YES_OPTION)
			{
				
				int species = JOptionPane.showConfirmDialog(null, "Do you have stripes?", "",
					JOptionPane.YES_NO_OPTION);
				
					
					if(species == JOptionPane.YES_OPTION)
					{
						JOptionPane.showMessageDialog(null, "You are a zebra.");
					}
					else if(species ==JOptionPane.NO_OPTION)
					{
						JOptionPane.showMessageDialog(null, "You are a pig.");
					}
			
			}
	
	
	}
}
