import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextField;


public class CheapCalc
{
	JFrame window;
	JPanel panel;
	JTextField one;
	JTextField two;
	JButton button;
	
	public static void main(String[] args)
	{
		CheapCalc a = new CheapCalc();
	}
	
	public CheapCalc()
	{
		window = new JFrame("Cheap Calculator");
		window.setVisible(true);
		window.setSize(400, 50);
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		panel = new JPanel();
		button = new JButton("Add");
		one = new JTextField(10);
		two = new JTextField(10);
		
		panel.add(one);
		panel.add(two);
		panel.add(button);
		window.add(panel);
		
		int numOne = Integer.parseInt(one.getText());
		int numTwo = Integer.parseInt(two.getText());
		
		window.pack();
	}
}
