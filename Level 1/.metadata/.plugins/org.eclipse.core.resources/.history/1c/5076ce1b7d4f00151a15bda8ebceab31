import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class robotGUI
{
	JFrame frame;
	JPanel panel;
	JTextField sides;
	JTextField sideLength;
	JTextField penSize;
	JTextField penColor;
	JTextField speed;
	JButton generate;
	JLabel size;

	public static void main(String[] args)
	{
		robotGUI r = new robotGUI();

	}

	public robotGUI()
	{

		JFrame frame = new JFrame();
		frame.setVisible(true);
		frame.setSize(500, 500);

		JPanel panel = new JPanel();

		JButton generate = new JButton("Generate");

		JTextField sides = new JTextField("", 20);
		sides.setLocation(10, 10);
		JTextField sideLength = new JTextField("", 20);
		sideLength.setLocation(10, 50);
		JTextField penSize = new JTextField("", 20);
		penSize.setLocation(10, 90);
		JTextField penColor = new JTextField("", 20);
		JTextField speed = new JTextField("", 20);

		JLabel size = new JLabel("Size");

		panel.add(sides);
		panel.add(sideLength);
		panel.add(penSize);
		panel.add(penColor);
		panel.add(speed);
		panel.add(generate);
		panel.add(size);
		frame.add(panel);
	}
}
