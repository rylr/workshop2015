import org.jointheleague.graphical.robot.Robot;

public class robotMethods
{
	public static void main(String[] args)
	{

		robotMethods r = new robotMethods();
	}

	public robotMethods()
	{
		Robot dennis = new Robot();
		Robot olofmeister = new Robot(10, 10);
		dennis.penDown();
		olofmeister.penDown();
		dennis.setSpeed(10);

		square(dennis, 50);
		square(olofmeister, 100);

	}

	public void square(Robot robot, int size)
	{
		for (int i = 0; i <= 3; i++)
		{
			robot.move(size);
			robot.turn(90);
		}
	}

}
